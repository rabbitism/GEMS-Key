<UserControl x:Class="GEMS_Key.Buttons"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GEMS_Key"
             mc:Ignorable="d" 
             >
    <StackPanel Margin="0 8">
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Search Engine" Style="{StaticResource MaterialDesignButtonTextBlock}" Margin="8"/>
            <Button Content="Google" Margin="4 0" Style="{StaticResource MaterialDesignRaisedButton}"/>
            <Button Content="WikiPedia" Margin="4 0" Style="{StaticResource MaterialDesignFlatButton}"/>
        </StackPanel>
    </StackPanel>
</UserControl>
